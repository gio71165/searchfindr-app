{
  "manifest_version": 3,
  "name": "SearchFindr",
  "version": "1.0.5",
  "description": "Capture on-market listings into your SearchFindr workspace.",
  "permissions": ["storage", "activeTab", "scripting"],
  "host_permissions": [
    "https://searchfindr-app.vercel.app/*",
    "http://*/*",
    "https://*/*"
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "content_scripts": [
    {
      "matches": ["https://searchfindr-app.vercel.app/extension/callback*"],
      "js": ["contentScript.js"],
      "run_at": "document_idle"
    }
  ]
}
