{
  "manifest_version": 2,
  "name": "SearchFindr",
  "version": "1.0.5",
  "description": "Capture on-market listings into your SearchFindr workspace.",
  "permissions": [
    "storage",
    "activeTab",
    "https://searchfindr-app.vercel.app/*",
    "https://searchfindr.net/*",
    "https://*.bizbuysell.com/*",
    "https://*.bizquest.com/*",
    "https://*.loopnet.com/*",
    "https://*.dealstream.com/*",
    "https://*.axial.net/*"
  ],
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  }
}
